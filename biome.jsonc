{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "extends": ["ultracite"],
  "files": {
    "ignoreUnknown": true
  },
  "linter": {
    "rules": {
      "suspicious": {
        "noConsole": "off",
        "useAwait": "off"
      },
      "style": {
        "noMagicNumbers": "off"
      },
      "complexity": {
        "noExcessiveCognitiveComplexity": "warn"
      },
      "nursery": {
        "useMaxParams": "warn"
      }
    }
  }
}
