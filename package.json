{
  "name": "bullmq-workflows-monorepo",
  "private": true,
  "description": "A TypeScript workflow engine built on BullMQ - monorepo",
  "scripts": {
    "build": "turbo run build",
    "test": "turbo run test",
    "check": "bun x ultracite@latest check",
    "check:fix": "bun x ultracite@latest fix",
    "clean:node_modules": "find . -name 'node_modules' -type d -exec rm -rf {} +"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.6",
    "lefthook": "^1.13.6",
    "turbo": "^2.5.8",
    "typescript": "5.9.2",
    "ultracite": "5.6.4"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.3.0",
  "workspaces": [
    "packages/*",
    "examples/*",
    "apps/*"
  ]
}
